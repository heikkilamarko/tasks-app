{
	email {$CADDY_TLS_EMAIL}

	log {
		level {$CADDY_LOG_LEVEL}
		format console
		# format json {
		# 	time_format "rfc3339_nano"
		# }
	}
}

{$CADDY_SITE_ADDRESS} {
	log
	encode gzip

	tls {
		dns godaddy {$CADDY_TLS_GODADDY_TOKEN}
	}

	header {
		-Server
		>Location http:// https://
	}

	@auth {
		host auth.{$CADDY_DOMAIN}
	}
	handle @auth {
		reverse_proxy {$CADDY_ZITADEL_ADDRESS}
	}

	@smtp {
		host smtp.{$CADDY_DOMAIN}
	}
	handle @smtp {
		reverse_proxy {$CADDY_SMTP4DEV_ADDRESS}
	}

	@nats_ws {
		host www.{$CADDY_DOMAIN}
		path /hub/*
	}
	handle @nats_ws {
		reverse_proxy {$CADDY_NATS_WS_ADDRESS}
	}

	@app {
		host www.{$CADDY_DOMAIN}
	}
	handle @app {
		redir / /ui
		reverse_proxy {$CADDY_APP_ADDRESS}
	}
}
